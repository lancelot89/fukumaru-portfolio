    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
